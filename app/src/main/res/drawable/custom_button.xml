<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/ColorBackgroundButton_" />
            <stroke
                android:width="3dp"
                android:color="@color/ColorStrokeButton" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/ColorBackgroundButton_"
                android:endColor="@color/ColorBackgroundButton_press"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/ColorStrokeButton" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"/>
        </shape>
    </item>
</selector>