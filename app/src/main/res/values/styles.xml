<resources>

    <color name="ColorBackground">#fff</color>
    <color name="ColorToolBar">#cedf39</color>

    <color name="ColorTextButton">#fff</color>
    <color name="ColorBackgroundButton_">#000</color>
    <color name="ColorBackgroundButton_press">#000</color>
    <color name="ColorStrokeButton">#fff</color>

    <color name="ColorBackgroundTab">#056205</color>
    <color name="ColorTabScroll">#056205</color>

    <color name="ColorTextView">#000</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- style for custom_button -->
    <style name="CustomStyleButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ColorTextButton</item>
        <item  name="android:background">@drawable/custom_button</item>
        <item name="android:layout_width">250dp</item>
    </style>

    <!-- style for editText -->
    <style name="styleEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_column">2</item>
        <item name="android:ems">8</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
    </style>
    <!-- style for toolbar -->
    <style name="MyToolbar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

</resources>
